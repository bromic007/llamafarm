{
  "name": "llamafarm-desktop",
  "version": "0.0.1",
  "description": "LlamaFarm Desktop - Local AI Platform",
  "main": "dist/main/index.js",
  "author": "LlamaFarm Team",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "pack:mac": "npm run build && electron-builder --mac --dir",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.llamafarm.desktop",
    "productName": "LlamaFarm",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "llama-farm",
      "repo": "llamafarm"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "identity": null,
      "darkModeSupport": true
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development",
      "icon": "build/icons"
    },
    "extraResources": [
      {
        "from": "../designer/dist",
        "to": "designer",
        "filter": ["**/*"]
      }
    ]
  }
}
