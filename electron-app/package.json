{
  "name": "llamafarm-desktop",
  "version": "0.0.1",
  "description": "LlamaFarm Desktop - Local AI Platform",
  "main": "dist/main/index.js",
  "author": "LlamaFarm Team <support@llamafarm.dev>",
  "license": "Apache-2.0",
  "homepage": "https://llamafarm.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/llama-farm/llamafarm.git"
  },
  "bugs": {
    "url": "https://github.com/llama-farm/llamafarm/issues"
  },
  "keywords": [
    "llamafarm",
    "ai",
    "local",
    "platform",
    "desktop",
    "application"
  ],
  "contributors": [
    {
      "name": "LlamaFarm Team",
      "email": "support@llamafarm.dev",
      "url": "https://llamafarm.dev"
    }
  ],
  "scripts": {
    "sync-models": "node scripts/sync-required-models.js",
    "prebuild": "npm run sync-models",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "pack:mac": "npm run build && electron-builder --mac --dir",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-updater": "^6.6.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^2.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.llamafarm.desktop",
    "productName": "LlamaFarm",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*",
      "required-models.yaml"
    ],
    "publish": {
      "provider": "github",
      "owner": "llama-farm",
      "repo": "llamafarm"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "LlamaFarm-desktop-app-mac-${arch}.${ext}",
      "identity": null,
      "darkModeSupport": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "LlamaFarm-desktop-app-windows-${arch}.${ext}",
      "signtoolOptions": {
        "sign": "./sign-windows.js"
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Development",
      "icon": "build/icons",
      "artifactName": "LlamaFarm-desktop-app-linux-${arch}.${ext}"
    },
    "extraResources": [
      {
        "from": "../designer/dist",
        "to": "designer",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/splash-logo.png",
        "to": "splash-logo.png"
      }
    ]
  }
}
