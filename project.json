{
  "$schema": "https://json.schemastore.org/nx-project",
  "name": "llamafarm",
  "projectType": "application",
  "targets": {
    "dev": {
      "continuous": true,
      "dependsOn": [
        "server:start",
        "rag:start",
        "designer:dev"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "tail -f /dev/null"
      }
    },
    "lemonade": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd config && bash ../runtimes/lemonade/start-all.sh"
      }
    }
  }
}
